<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OAuth.Views.LoginPage">
    <ContentPage.Content>
    <StackLayout Orientation="Vertical" Padding="5">
            <Label Text="Login Screen" FontAttributes="Bold" Margin="20" HorizontalOptions="CenterAndExpand"></Label>
            <Entry Placeholder="Username"></Entry>
            <Entry Placeholder="Password"></Entry>
            <Button Text="Login" BorderColor="Gray" BorderWidth="1" BorderRadius="5" Clicked="Login_Clicked"></Button>
            <Label Text="--- Or ---" HorizontalOptions="CenterAndExpand"></Label>
            <Button Text="Google" BorderColor="Gray" BorderWidth="1" BorderRadius="5" Clicked="GoogleAuth_Clicked"></Button>
            <Button Text="Facebook" BorderColor="Gray" BorderWidth="1" BorderRadius="5" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
